<view class="page">
    <!-- 侧边栏内容 -->
    <view class="page-slidebar">
        <view class="page-content">
              <view>
                  <button class=""  open-type="getUserInfo" bindgetuserinfo="login" wx:if="{{regFlag==true}}"> 请点击登陆 </button>
              </view>    
              <view class="wc" wx:if="{{regFlag==false}}">               
                <view class='avatar'>
                  <open-data  type="userAvatarUrl"></open-data>
                </view>
                <view class='infotext'>
                  <open-data type="userNickName"></open-data>
                </view>
              </view>
            <view class="wc" bindtap="onTap">
                <text>个人信息</text>
            </view>
            <view class="wc">
                <text>回收站</text>
            </view>
        </view>
    </view>
    <view bindtouchmove="tap_drag" bindtouchend="tap_end" bindtouchstart="tap_start" class="page-top {{open ? ['c-state','cover'] : ''}} ">
        
        <view class='content'> 
            <view class='movie' wx:for="{{weeklyMovieList}}" bindtap='onTap2' data-text-id='{{item.id}}'>
           
            
           <view>
            <title class=''>标题：{{item.name}}</title>
           </view>
           <view>
   <text class=''>正文：{{item.comment}} </text> 
        
       </view>
        </view>
       </view>
        
         <view class='tianjia' bindtap="onTap1">
       <image src='/image/timg.jpg' mode='scaleToFill' class='image'></image>
        </view>   
    </view>
</view>